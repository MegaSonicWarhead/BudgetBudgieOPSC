<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewExpenseScreen">

    <!-- Filters container inside a ScrollView -->
    <ScrollView
        android:id="@+id/scrollFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/spnrDate"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select Start Date"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select End Date"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spnrCategories"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spnrSort"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnViewExpenses"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="View Expenses"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView for listing expenses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerExpenses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>